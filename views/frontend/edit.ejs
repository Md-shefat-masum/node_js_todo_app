
<%- include('./layouts/header') %>

    <body class="body">
        <div class="container">
            <div class="today"></div>
            <div class="row">
                <div class="col-md-4 col-md-offset-4 col-xs-6 col-xs-offset-3">
                    <!-- todo form -->
                    <form action="/update-todo-data" method="post">
                        <input type="text" value="<%= index %>" name="index">
                        <div class="add-control">
                            <div class="form-group has-feedback">
                                <input type="text" value="<%= todo.title %>" name="todo_title" class="form-control" placeholder="✍️ edit item..." />
                                <button style="padding: 0; border: 0;" class="form-control-feedback add-btn">
                                    <i class="fa fa-plus" title="Add item"></i>
                                </button>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </body>

